<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    MainView.fxml: JavaFX layout for displaying the main view of the bank application.
    This layout displays:
    - A label for the title "Bank Accounts".
    - A ListView for displaying the list of bank accounts.
    - A button to add a new account.
    - The controller for this view is 'ui.MainViewController'.
-->

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="ui.MainViewController">
    <!-- Title Label for the view -->
    <Label text="Bank Accounts" style="-fx-font-size: 16px;" />

    <!-- ListView to display all the bank accounts -->
    <ListView fx:id="accountListView" prefHeight="300" focusTraversable="true" />

    <!-- HBox containing buttons for actions -->
    <HBox spacing="10">
        <!-- Button to add a new bank account -->
        <Button text="Add Account" onAction="#handleAddAccount" />
    </HBox>
</VBox>
